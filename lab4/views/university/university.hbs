<div class="wrapper">
	<div class="university">
		<div class="university__title title"><img id="main-logo" src="/img/icons/logo.png" alt="logo" />Сайт</div>
		<div class="university__row row">
			<div class="university__menu menu">
				{{>menu}}
			</div>
			<div class="university__content content">
				{{#if university.image}}
				<div class="content__ava">
					<img src="{{university.image}}" alt="image not found" />
				</div>
				{{/if}}
				<br>
				<table class="entities-table">
					<tr>
						<th>Name</th>
						<td>{{university.name}}</td>
					</tr>
					<tr>
						<th>Country</th>
						<td>{{university.country}}</td>
					</tr>
					<tr>
						<th>Num of students</th>
						<td>{{university.numOfStudents}}</td>
					</tr>
					<tr>
						<th>Campus</th>
						<td>{{university.campus}}</td>
					</tr>
					<tr>
						<th>Foundation date</th>
						<td>{{university.foundationDate}}</td>
					</tr>
					<tr>
						<th>Specialty name</th>
						<td>{{specialtyName}}</td>
					</tr>
				</table>

				<form method="POST" onsubmit="return check()">
					<input type="hidden" name="id" value="{{university._id}}" />
					<input class="remove-entity remove-university" type="submit" value="Видалити цей університет">
				</form>
			</div>
		</div>
	</div>
</div>